{
  "parser": "@babel/eslint-parser",
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module",
    "babelOptions": {
      "plugins": ["@babel/plugin-syntax-import-assertions"]
    }
  },
  "rules": {
    "es/no-dynamic-import": "error"
  },
  "plugins": ["mocha", "es"],
  "extends": ["eslint:recommended", "plugin:mocha/recommended"]
}
